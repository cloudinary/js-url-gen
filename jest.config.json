{
  "preset": "ts-jest",
  "testEnvironment": "jsdom",
  "bail": true,
  "collectCoverageFrom": [
    "<rootDir>/src/**/*.ts",
    "<rootDir>/scripts/**/*.ts",
    "!<rootDir>/scripts/createEntrypoints.ts"
  ],
  "modulePaths": [
    "<rootDir>/src"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 95,
      "functions": 95,
      "lines": 95,
      "statements": 95
    }
  },
  "globals": {
    "ts-jest": {
      "diagnostics": false
    }
  },
  "reporters": [
    "default",
    ["jest-html-reporters", {
      "publicPath" : "./public/progress/",
      "filename": "cloudinary-base-progress-report.html",
      "pageTitle": "Cloudinary JS 2.0 Progress Report",
      "logoImgPath": "./__DOC_RESOURCES__/cloudinaryicon.png",
      "expand": true
    }]
  ]
}
