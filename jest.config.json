{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "bail": true,
  "collectCoverageFrom": [
    "<rootDir>/src/**/*.ts"
  ],
  "modulePaths": [
    "<rootDir>/src"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 95,
      "functions": 95,
      "lines": 95,
      "statements": 95
    }
  },
  "globals": {
    "ts-jest": {
      "diagnostics": false
    }
  },
  "reporters": [
    "default",
    "jest-html-reporters"
  ]
}
